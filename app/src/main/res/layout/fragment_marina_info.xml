<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.MarinaInfoFragment">

    <TextView
        android:id="@+id/marinaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Marina"
        android:textAllCaps="true"
        android:textColor="@color/blue"
        android:textSize="33sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/san_francisco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView2"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="208dp"
        android:src="@drawable/ic_baseline_home_24"
        app:layout_constraintEnd_toStartOf="@+id/addressMarina"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressMarina"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/san_francisco"
        android:gravity="center_horizontal"
        android:text="Address: Spinčićeva ulica 2, 21000 Split"
        android:textColor="@color/blue"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marinaName" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/ic_baseline_local_phone_24"
        app:layout_constraintRight_toLeftOf="@id/phoneMarina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2" />

    <TextView
        android:id="@+id/phoneMarina"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/san_francisco"
        android:gravity="center_horizontal"
        android:text="Telephone number:"
        android:textColor="@color/blue"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressMarina" />

    <TextView
        android:id="@+id/phoneNumMarina"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/san_francisco"
        android:gravity="center_horizontal"
        android:text="+385 021 277 851"
        android:textColor="@color/blue"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/phoneMarina"
        tools:layout_editor_absoluteX="64dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView3"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_baseline_access_time_24"
        app:layout_constraintEnd_toStartOf="@+id/openMarina"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView" />

    <TextView
        android:id="@+id/openMarina"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/san_francisco"
        android:text="Open: 24/7"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumMarina" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView4"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_baseline_sports_tennis_24"
        app:layout_constraintEnd_toStartOf="@+id/activitiesMarina"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3" />

    <TextView
        android:id="@+id/activitiesMarina"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/san_francisco"
        android:minLines="2"
        android:text="Extra activities: diving school, restaurant, bar, hotel."
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openMarina" />

</androidx.constraintlayout.widget.ConstraintLayout>