<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/myProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/san_francisco"
        android:textStyle="bold"
        android:text="My Profile"
        android:textAllCaps="true"
        android:textColor="@color/blue"
        android:layout_marginTop="60dp"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/myInfoProf"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/shapecom"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/san_francisco"
        android:padding="15dp"
        android:text="My Information"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myProfile" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/myReservProf"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:padding="15dp"
        android:text="My Reservations"
        android:textSize="22sp"
        android:background="@drawable/shapecom"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:fontFamily="@font/san_francisco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myInfoProf" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/marinaInfoProf"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/shapecom"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/san_francisco"
        android:padding="15dp"
        android:text="Marina Information"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myReservProf" />

    <TextView
        android:id="@+id/registration"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="72dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/san_francisco"
        android:gravity="center"
        android:text="Smart Marina\n Profico Summer Camp \n @2020"
        android:textColor="@color/lightgrey"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marinaInfoProf" />

    <Button
        android:id="@+id/log_out"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="196dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/san_francisco"
        android:text="Log out"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marinaInfoProf" />


</androidx.constraintlayout.widget.ConstraintLayout>